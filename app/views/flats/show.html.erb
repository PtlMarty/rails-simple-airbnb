<div class="container">
  <div class="card w-50">
    <div class="card-body">
      <h5 class="card-title"><%= @flat.name %></h5>
      <p class="card-text"><%= @flat.address %></p>
      <p class="card-text"><%= @flat.description %></p>
      <p class="card-text">Price : <strong><%= @flat.price_per_night %></strong></p>
      <p class="card-text">Number of Guest: <strong><%= @flat.number_of_guests %></strong></p>
      </div>
      <%= link_to "Back", flats_path, class:"btn btn-outline-primary w-25 m-3"%>
  </div>
</div>
